<% include ../partials/header %>
<div class="container ">
    <div class="row mt-3">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item active">Info 1</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="">
                <img class="img-fluid" src="<%= campground.image %>" alt="Responsive image" width="100%">
                <div class="figure-caption pt-3 pl-1">
                    <h4 class="float-right">$<%= campground.price%>/night</h4>
                    <h4><a href=""><%= campground.name %></a></h4>
                </div>
                <div class="pl-1">
                    <p class="text-justify"><%= campground.description %></p>
                    <p class="text-justify"><em>Submitted By <%= campground.author.username %></em></p>
                    <% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
                    <a class="btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                    <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="post" class="d-inline">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                    <% } %>
                </div>
            </div>
            <hr>
            <div>
                <div class="text-right">
                    <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add NewComment</a>
                </div>
                <hr class="display-2">
                <% campground.comments.forEach(function (comment){ %>
                <div class="row">
                    <div class="col-md-12">
                        <strong><%= comment.author.username %></strong>
                        <span class="float-right">10 days ago</span>
                        <p>
                            <%= comment.text %>
                        </p>
                        <%if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                        <a href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit"
                           class="btn btn-sm btn-warning">Edit</a>
                        <form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method="post" class="d-inline">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                        <% }%>
                    </div>
                </div>
                <hr class="mt-3">
                <% }) %>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer.ejs %>