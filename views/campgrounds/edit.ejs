<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 class="col-12 text-center mt-1 mb-2">Edit <%= campground.name%></h1>
        <div style="width: 30%; margin: 0px auto;">
            <form action="/campgrounds/<%= campground._id%>?_method=PUT" , method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" , value="<%= campground.name%>" name="campground[name]"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number", value="<%= campground.price%>" name="campground[price]" min="0.01" step="0.01" >
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" , value="<%= campground.image%>" name="campground[image]"></input>
                </div>
                <div class="">
                    <input type="text", value="<%= campground.description%>", name = "campground[description]" class="form-control">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a class="col-12" href="/campgrounds"><i class="fa fa-arrow-left" aria-hidden="true"></i> Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>