<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 class="col-12 text-center mt-1 mb-2">Add New Comment to <%= campground.name %></h1>
        <div style="width: 30%; margin: 0px auto;">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea name="comment[text]" class="" cols="45" rows="10" value="comment..."></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a class="col-12" href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>